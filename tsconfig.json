{
  "include": ["src"],
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "Preserve",
    "skipLibCheck": true,
    "noEmit": false,
    "verbatimModuleSyntax": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "useUnknownInCatchVariables": false,
    "noImplicitOverride": true,
    "useDefineForClassFields": false,
    "moduleDetection": "force",
    "types": ["vite/client"],
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
  }
}
